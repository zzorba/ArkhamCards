require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")

# Resolve react_native_pods.rb with node to allow for hoisting

ENV['RCT_NEW_ARCH_ENABLED'] = '0'

require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, "15.1"
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'ArkhamCards' do
  use_expo_modules!
  post_integrate do |installer|
    begin
      expo_patch_react_imports!(installer)
    rescue => e
      Pod::UI.warn e
    end
  end
  config = use_native_modules!
  use_frameworks!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )
  pre_install do |installer|
    installer.pod_targets.each do |pod|
      if pod.name.eql?('op-sqlite')
        def pod.build_type
          Pod::BuildType.static_library
        end
      end

      if pod.name.eql?('RNReanimated')
        def pod.build_type
          Pod::BuildType.static_library
        end
      end
    end
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        if target.name == "RNReactNativeHapticFeedback"
          target.build_configurations.each do |config|
            config.build_settings["OTHER_LDFLAGS"] ||= ["$(inherited)"]
            config.build_settings["OTHER_LDFLAGS"] << "-framework AudioToolbox"
          end
        end
        if  config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] == '11.0'
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
        end
        if config.build_settings['WRAPPER_EXTENSION'] == 'bundle'
          config.build_settings['DEVELOPMENT_TEAM'] = '54773FU58P'
        end

        # Fix header search paths for RN 0.79
        extra_headers = [
          "${PODS_ROOT}/Headers/Private/React-RuntimeCore",
          "${PODS_ROOT}/Headers/Private/React-debug",
          "${PODS_ROOT}/Headers/Private/React-jserrorhandler",
          "${PODS_ROOT}/Headers/Private/React-jsinspector",
          "${PODS_ROOT}/Headers/Private/React-runtimescheduler",
          "${PODS_ROOT}/Headers/Private/React-performancetimeline",
          "${PODS_ROOT}/Headers/Private/React-rendererconsistency",
          "${PODS_ROOT}/../node_modules/react-native/ReactCommon"
        ]
        config.build_settings['HEADER_SEARCH_PATHS'] ||= '$(inherited)'
        config.build_settings['HEADER_SEARCH_PATHS'] << " " + extra_headers.join(" ")
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] ||= '$(inherited)'
        config.build_settings['FRAMEWORK_SEARCH_PATHS'] << " ${PODS_CONFIGURATION_BUILD_DIR}/React-RuntimeApple"
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
  end
end

